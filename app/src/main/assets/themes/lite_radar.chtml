<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {
    margin:0;
    background:#333;
}

img {
    max-width:100%;
    max-height:100%;
}

#image {
    background:url({$url});
    position:absolute;
    width:100%;
    height:100%;
{% if ($maximized == true) %}
    background-size:cover;
{% else %}
    background-size:contain;
{% endif %}
    background-position:center;
    background-repeat:no-repeat;
    z-index:1;
}

{% if ($maximized == true) %}
#left_click {
    position: absolute;
    top: 0;
    left: 0;
    width: 10%;
    height: 100%;
    z-index:100;
}

#right_click {
    position: absolute;
    top: 0;
    right: 0;
    width: 10%;
    height: 100%;
    z-index:100;
}

#top_click {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 10%;
    z-index:50;
}

#bottom_click {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 10%;
    z-index:50;
}

.background-left {
    background-position:left !important;
}

.background-right {
    background-position:right !important;
}

.background-top {
    background-position:top !important;
}

.background-bottom {
    background-position:bottom !important;
}
{% endif %}

#failed {
    position:absolute;
    width:100%;
    text-align:center;
    color:#999;
    top:40%;
    z-index:0;
}

.hidden {
    display:none;
}
</style>
<script>
setTimeout(function() {
    document.querySelector("#failed").classList.remove("hidden");
}, 10000);

{% if ($maximized == true) %}
var removeAll = function(e) {
    e.classList.remove(
        'background',
        'background-left',
        'background-right',
        'background-top',
        'background-bottom'
    );
}

document.addEventListener('DOMContentLoaded', function() {
    var image = document.querySelector("#image");
    var left = document.querySelector('#left_click');
    var right = document.querySelector('#right_click');
    var top = document.querySelector('#top_click');
    var bottom = document.querySelector('#bottom_click');

    left.addEventListener('click', function() {
        if (image.classList.contains('background') && !image.classList.contains('background-left'))
            removeAll(image);
        else
            image.classList.add('background','background-left');
    });

    right.addEventListener('click', function() {
        if (image.classList.contains('background') && !image.classList.contains('background-right'))
            removeAll(image);
        else
            image.classList.add('background','background-right');
    });

    top.addEventListener('click', function() {
        if (image.classList.contains('background') && !image.classList.contains('background-top'))
            removeAll(image);
        else
            image.classList.add('background','background-top');
    });

    bottom.addEventListener('click', function() {
        if (image.classList.contains('background') && !image.classList.contains('background-bottom'))
            removeAll(image);
        else
            image.classList.add('background','background-bottom');
    });
});
{% endif %}
</script>
</head>
<body>
    <div id="image"></div>
{% if ($maximized == true) %}
    <div id="left_click"></div>
    <div id="right_click"></div>
    <div id="top_click"></div>
    <div id="bottom_click"></div>
{% endif %}
    <div id="failed" class="hidden">Failed to load image</div>
</body>
</html>