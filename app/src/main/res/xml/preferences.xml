<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="?android:attr/actionBarSize">

    <PreferenceCategory android:title="@string/general_title">
        <ListPreference
            android:title="@string/show_favorite_title"
            android:defaultValue="@string/wifi_toggle_default"
            android:entries="@array/wifi_toggle_names"
            android:entryValues="@array/wifi_toggle_values"
            android:summary="@string/show_favorite_summary"
            android:key="show_favorite" />

        <ListPreference
            android:title="@string/default_favorite_title"
            android:summary="@string/default_favorite_summary"
            android:key="default_favorite"
            android:defaultValue="1"
            android:enabled="false" />

        <ListPreference
            android:title="@string/auto_refresh_title"
            android:defaultValue="@string/wifi_toggle_default"
            android:entries="@array/wifi_toggle_names"
            android:entryValues="@array/wifi_toggle_values"
            android:summary="@string/auto_refresh_summary"
            android:key="auto_refresh" />

        <CheckBoxPreference
            android:title="@string/show_fullscreen_title"
            android:defaultValue="false"
            android:summary="@string/show_fullscreen_summary"
            android:key="show_fullscreen" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/nws_title">
        <CheckBoxPreference
            android:title="@string/show_maximized_title"
            android:defaultValue="false"
            android:summary="@string/show_maximized_summary"
            android:key="show_maximized" />

        <MultiSelectListPreference
            android:defaultValue="@array/enhanced_layer_default"
            android:entries="@array/enhanced_layer_names"
            android:entryValues="@array/enhanced_layer_values"
            android:key="enhanced_layers"
            android:title="@string/enhanced_layer_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/wunderground_title"
        android:key="wunderground_category">
        <EditTextPreference
            android:title="@string/api_key_title"
            android:key="api_key"
            android:summary="@string/api_key_summary"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <CheckBoxPreference
            android:title="@string/show_time_label_title"
            android:defaultValue="true"
            android:summary="@string/show_time_label_summary"
            android:key="show_time_label" />

        <ListPreference
            android:defaultValue="@string/image_resolution_default"
            android:entries="@array/image_resolution_names"
            android:entryValues="@array/image_resolution_values"
            android:key="image_resolution"
            android:title="@string/image_size_title"
            android:summary="@string/image_size_summary" />

        <EditTextPreference
            android:defaultValue="@string/image_resolution_default"
            android:title="@string/custom_resolution_title"
            android:key="custom_resolution"
            android:summary="@string/custom_resolution_summary"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:singleLine="true" />

        <CheckBoxPreference
            android:title="@string/lower_resolution_title"
            android:defaultValue="false"
            android:summary="@string/lower_resolution_summary"
            android:key="lower_resolution" />

        <ListPreference
            android:defaultValue="@string/distance_unit_default"
            android:entries="@array/distance_unit_names"
            android:entryValues="@array/distance_unit_values"
            android:key="distance_units"
            android:title="@string/distance_units_title" />

        <ListPreference
            android:defaultValue="@string/animation_speed_default"
            android:entries="@array/animation_speed_names"
            android:entryValues="@array/animation_speed_values"
            android:key="animation_speed"
            android:title="@string/animation_speed_title" />

        <ListPreference
            android:defaultValue="@string/animation_frames_default"
            android:entries="@array/animation_frames"
            android:entryValues="@array/animation_frames"
            android:key="animation_frames"
            android:title="@string/animation_frames_title"
            android:summary="@string/animation_frames_summary" />

        <CheckBoxPreference
            android:title="@string/show_snow_mix_title"
            android:defaultValue="true"
            android:summary="@string/show_snow_mix_summary"
            android:key="show_snow_mix" />

        <CheckBoxPreference
            android:title="@string/smooth_title"
            android:defaultValue="true"
            android:summary="@string/smooth_summary"
            android:key="smoothing" />

        <CheckBoxPreference
            android:title="@string/noclutter_title"
            android:defaultValue="true"
            android:summary="@string/noclutter_summary"
            android:key="noclutter" />

    </PreferenceCategory>


</PreferenceScreen>