<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="?android:attr/actionBarSize">

    <PreferenceCategory android:title="@string/startup_options_title">
        <CheckBoxPreference
            android:title="@string/show_favorite_title"
            android:defaultValue="false"
            android:summary="@string/show_favorite_summary"
            android:key="show_favorite" />

        <ListPreference
            android:title="@string/default_favorite_title"
            android:summary="@string/default_favorite_summary"
            android:key="default_favorite"
            android:defaultValue="1"
            android:enabled="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/image_options_title">
        <CheckBoxPreference
            android:title="@string/show_maximized_title"
            android:defaultValue="false"
            android:summary="@string/show_maximized_summary"
            android:key="show_maximized" />

        <CheckBoxPreference
            android:title="@string/show_fullscreen_title"
            android:defaultValue="false"
            android:summary="@string/show_fullscreen_summary"
            android:key="show_fullscreen" />
    </PreferenceCategory>

</PreferenceScreen>